<%if !logged_in? %>
<h1> Please Log In To Continue </h1>

<a href="/signup">Sign Up</a> <a href="/login">Log In</a>

<%else%>

<h2> <%=@current_user.username%>'s Profile </h2> <!-- @user = current_user !-->
<p>Username: <%= @user.username %> </p>
<p>Email: <%=@user.email %> </p>

<br>

<a href="/"> Homepage </a>

<h1>Your Questions</h1>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @user.questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><a href="/questions/<%=question.id%>"><%= question.title %></a></td>
      <td><%= question.body %></td>
    </tr>
  <% end %>
</table>

    <br>

    <a href="/single_question"> Ask New Question</a>

    <br>

    <h1>Your Answers</h1>
    <table border="1">
      <tr>
        <th> Answer </th>
        <th> Question </th>
        <th> Description </th>
      </tr>

  <% @answers.each do |answer| %>
    <tr>
      <td><%= answer.text %></td>
      <td><%= answer.question.title %></td>
      <td><%= answer.question.body %></td>
    </tr>
  <% end %>
</table>


<% end %>

